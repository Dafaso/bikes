<%= form_for(shop) do |f| %>
  <% if shop.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(shop.errors.count, "error") %> prohibited this shop from being saved:</h2>

      <ul>
      <% shop.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label :website %>
    <%= f.text_field :website %>
  </div>

  <div class="field">
    <%= f.label :street1 %>
    <%= f.text_field :street1 %>
  </div>

  <div class="field">
    <%= f.label :street2 %>
    <%= f.text_field :street2 %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.label :zip %>
    <%= f.text_field :zip %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :contact_name %>
    <%= f.text_field :contact_name %>
  </div>

  <div class="field">
    <%= f.label :contact_email %>
    <%= f.text_field :contact_email %>
  </div>

  <div class="field">
    <%= f.label :contact_phone %>
    <%= f.text_field :contact_phone %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :notes %>
    <%= f.text_area :notes %>
  </div>

  <span><b>Choose manufacturers for this shop:</b></span>
  <br><br>
  <% @manufacturers.each do |m| %>
    <div class="field">
      <%= check_box_tag 'shop[manufacturer][]', m.name, @shop.manufacturers.include?(m) %>
      <span><%= m.name %></span>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit class:"mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
  </div>
<% end %>
